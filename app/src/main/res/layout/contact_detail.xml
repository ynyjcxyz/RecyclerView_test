<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:textSize="36sp"
        tools:text="name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/ic_outline_call_24"
            android:text="@string/call"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/ic_outline_message_24"
            android:text="@string/text"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/duo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/ic_outline_videocam_24"
            android:text="@string/set_up"
            android:textColor="@color/black" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_phone_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_outline_call_24" />

        <TextView
            android:id="@+id/detail_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/detail_phone_button"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            tools:text="+1 00000000" />

        <ImageView
            android:id="@+id/detail_message_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_outline_message_24" />
    </RelativeLayout>

</LinearLayout>